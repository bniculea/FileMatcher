<UserControl x:Class="FileMatcher.SearchTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileMatcher"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <Grid>
            <TextBox Text="{Binding ElementName=root, Path=TextBoxProperty}"/>
            <Image Source="{Binding ElementName=root, Path=ImageSource}"/>
    </Grid>
</UserControl>
